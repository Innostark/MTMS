@using EmailTemplating.Models
@model EmailTemplating.Web.Models.EmailViewModel
@{
    ViewBag.Title = "Email";
}

<h2 class="page-header col-sm-10" style="float: left; margin-top: 10px;">@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="col-sm-2" style="float: right; margin-top: 10px;">
        <button type="submit" onClick="return ValidateFields() " class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "Email", null, new {@class = "btn btn-default"})
    </div>
    <div class="form-horizontal col-sm-12" style="width: 100%; float: left">
              
        <br/>
        <div class="form-group">
            @Html.HiddenFor(model => model.Email.EmailID)
            @Html.LabelFor(model => model.Email.Category, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email.Category, new {@class = " mandatory form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email.Title, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email.Title, new {@class = " mandatory form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email.Subject, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email.Subject, new {@class = " mandatory form-control"})
            </div>
        </div>

          <div class="form-group">
            @Html.LabelFor(model => model.Email.DbSource, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.SelectedDbSource, Model.DbSources, new {@class = " mandatory form-control"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Templates, new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.SelectedTemplate, new SelectList(Model.Templates, "TemplateID", "Name"), new {@class = " mandatory form-control"})
            </div>
        </div>
       
    
    </div>
}         
<script type="text/javascript" src="~/Scripts/app/ValidateFields.js"></script> 
